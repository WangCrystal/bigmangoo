<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>用户相关的服务</description>

    <!-- 通过用户ID取得用户的货运地址 -->
    <service name="getCustomerAddressByPartyId" engine="java"
             location="com.bigmangoo.person.PersonServices" invoke="getCustomerAddressByPartyId">
        <description>通过用户ID取得用户的货运地址</description>
        <attribute name="partyId" type="String" mode="IN" optional="false"/>
        <attribute name="customerAddressList" type="List" mode="OUT" optional="false"/>
    </service>

</services>
