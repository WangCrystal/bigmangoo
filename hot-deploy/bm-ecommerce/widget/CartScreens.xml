<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- 购物车界面 -->
    <screen name="showcart">
        <section>
            <actions>

                <!-- 购物车价格总计 -->
                <set field="rightbarScreenName" value="cartCountWidget" global="true"/>
                <set field="rightbarScreenLocation" value="component://bm-ecommerce/widget/CartScreens.xml" global="true"/>

            </actions>
            <widgets>
                <decorator-screen name="three-column-base-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/cart/showcart.ftl"/></html>
                        </platform-specific>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 结算界面 -->
    <screen name="checkout">
        <section>
            <actions>

                <!-- 购物车价格总计 -->
                <set field="rightbarScreenName" value="cartCountWidget" global="true"/>
                <set field="rightbarScreenLocation" value="component://bm-ecommerce/widget/CartScreens.xml" global="true"/>

            </actions>
            <widgets>
                <decorator-screen name="three-column-base-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/cart/checkout.ftl"/></html>
                        </platform-specific>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 购物车小计 -->
    <screen name="cartCountWidget">
        <section>
            <actions>

            </actions>
            <widgets>

                <platform-specific>
                    <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/cart/cartCountWidget.ftl"/></html>
                </platform-specific>

            </widgets>
        </section>
    </screen>

</screens>
